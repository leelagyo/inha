<script>
  const email=sessionStorage.getItem("email");
  const uid=sessionStorage.getItem("uid");
  
  if(email){//로그인 상태
    $("#login").hide();
    $("#logout, #mypage,#cart").show();
    $("#mypage").html(email);
  }else{//로그아웃
    $("#login").show();
    $("#logout, #mypage, #cart").hide();
  }

  $("#logout").on("click", function(e){
    e.preventDefault();
    if(confirm("정말로 로그아웃하실래요?")){
      sessionStorage.clear();
      location.href="/";
    }
  });
</script>